' Enable the RTCC
Sub rtcc_Enable ( in rtcc_data )

     RTCCON.RTCWREN = 1     'MUST Write this bit before RTCEN
     'Enable /Disable rtcc, clear RTCWREN
     RTCCON.RTCEN = rtcc_data.0
     wait while RTCCON.RTCSYNC = 0
     RTCCON.RTCWREN = 0

End Sub

